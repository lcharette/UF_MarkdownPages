{
    "name": "lcharette/uf_markdownpages",
    "type": "userfrosting-sprinkle",
    "description": "Simple flat-file pages for UserFrosting 4",
    "keywords": ["UserFrosting", "Flat-file", "Markdown"],
    "homepage": "https://github.com/lcharette/UF_MarkdownPages",
    "license" : "MIT",
    "authors" : [
        {
            "name": "Louis Charette",
            "homepage": "https://github.com/lcharette"
        }
    ],
    "require": {
        "pagerange/metaparsedown": "^1.0.3",
        "lcharette/uf_breadcrumb": "^3.0.0"
    },
    "autoload": {
        "psr-4": {
            "UserFrosting\\Sprinkle\\MarkdownPages\\": "src/"
        },
        "files" : [
            "defines.php"
        ]
    },
    "autoload-dev": {
        "psr-4": {
            "UserFrosting\\Sprinkle\\MarkdownPages\\Tests\\": "tests/"
        }
    },
    "extra": {
        "installer-name": "MarkdownPages"
    }
}
