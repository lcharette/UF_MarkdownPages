{% extends "pages/abstract/dashboard.html.twig" %}

{% block page_title %}{{metadata.title}}{% endblock %}
{% block page_description %}{{metadata.description}}{% endblock %}
{% block body_matter %}
    <div class="box box-primary">
        <div class="box-body">
            {% if not metadata.hide_toc %}
                <div class="toc">
                    <ol data-toc="div.markdown" data-toc-headings="h2,h3"></ol>
                </div>
            {% endif %}
            <div class="markdown">
                {% block page_content %}{{content | raw}}{% endblock %}
            </div>
        </div>
    </div>
{% endblock %}

{% block stylesheets_page %}
    {{ assets.css('css/markdown') | raw }}
{% endblock %}

{% block scripts_page %}
    {% if metadata.toc %}{{ assets.js('js/markdown') | raw }}{% endif %}
{% endblock %}
